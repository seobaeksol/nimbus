{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Nimbus",
  "version": "0.1.0",
  "identifier": "com.nimbus.filemanager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "Nimbus File Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "Copyright Â© 2025 Nimbus Team",
    "shortDescription": "A modern, cross-platform file manager",
    "longDescription": "Nimbus is a modern, cross-platform file manager inspired by Total Commander, featuring multi-panel interface with grid layouts, archive support, remote file access, and powerful search capabilities.",
    "targets": "all",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "license": ""
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}